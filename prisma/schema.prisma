// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
  id               Int      @id @default(autoincrement())
  tripNumber       String
  origin           String
  destination      String
  time             DateTime
  mode             String
  accompanying     String?   // JSON or comma-separated names
  userConsent      Boolean
  createdAt        DateTime  @default(now())
}
